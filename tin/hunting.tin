#alias {setweapon} {
	#var {weapona} {%1};
	#var {weaponb} {%2};
	#var {weapon} {$weapona};
	#echo {Weapons set to $weapona and $weaponb\.};
	#cr;
}
#alias {chaweapon} {
	#if { "$weapon" == "$weapona"} {
		#var {weapon} {$weaponb};
		#send {rem $weapona};
		#send {wield $weaponb};
	};
	#else {
		#var {weapon} {$weapona};
		#send {rem $weaponb};
		#send {wield $weapona};
	};
}


#var mood {W}
#alias {mood} {
	#if { "%0" != ""} {
		#var {wimpy} {%0};
		#nop echo {Change wimpy $wimpy\.};
		#send {change wimpy $wimpy};
	};
	#else {
		#if { "$mood" == "W"} {
			#echo {Change mood aggressive: $wimpy\.};
			change mood aggressive;
			#var mood {A};
		};
		#elseif { "$mood" == "A"} {
			#echo {Change mood wimpy: $wimpy\.};
			change mood wimpy;
			#var mood {W};
		};
	};
}



#var {pathMark} {}
#var {pathDoMark} {0}
#var {pathDoDeath} {0}

#action {^Vnum: %1.$} {
	#if { $pathDoMark == 1 } {
		#if { "$pathMark" != ""} {#echo {Old mark was $pathMark\.}};
		#var {pathMark} {%1};
		#line gag;
		#echo {Mark put on room $pathMark\.};
	};
	#elseif { $pathDoDeath == 1 } {
		#var {pathDeath} {%1};
		#line gag;
		#echo {Death on room $pathDeath\.};
	};
	#var pathDoMark {0};
	#var pathDoDeath {0};
};

#alias {pathMark} {#var pathDoMark {1}; vnum}
#alias {pathMarkShow} {pathShow $mark}


